{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": false,
    "target": "es2018",
    "outDir": "lib",
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
